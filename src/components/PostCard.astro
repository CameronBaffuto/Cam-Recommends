---
const { post } = Astro.props;
---

<div class="card bg-base-200 shadow-md hover:shadow-xl transition-all border border-base-300">
    <div class="card-body">
      <h2 class="card-title">
        <a href={post.url} class="link link-hover">{post.title}</a>
      </h2>
      <p>{post.date}</p>
      <p class="text-base">{post.description}</p>
      <div class="card-actions justify-end mt-4">
        <a href={post.url} class="btn btn-primary btn-sm">Read More</a>
      </div>
    </div>
  </div>
  
