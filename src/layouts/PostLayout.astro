---
import "../styles/global.css";
import { theme } from "../config/theme.js";
import Nav from "../components/Nav.astro";
const { title, date, description } = Astro.props.frontmatter;
--- 

<html lang="en" data-theme={theme}>
  <head>
    <title>{title} | Cam Recommends</title>
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta charset="utf-8" />
  </head>
  <body class="min-h-screen flex flex-col">
    <Nav />

    <main class="flex-grow container mx-auto px-4 py-10 flex justify-center items-start">
      <div class="card w-full max-w-2xl bg-base-100 shadow-xl p-5">
        <div class="card-body">
          <h1 class="card-title text-3xl md:text-4xl font-extrabold mb-2">{title}</h1>
          <p class="text-sm text-base-content/60 mb-1">{new Date(date).toLocaleDateString()}</p>
          <p class="text-base text-base-content/80 mb-4">{description}</p>
          <div class="prose lg:prose-xl max-w-none">
            <slot />
          </div>
        </div>
      </div>
    </main>

    <footer class="p-4 text-center text-sm">
      {new Date().getFullYear()} Cam Recommends - Trusted Reviews
    </footer>
  </body>
</html>
