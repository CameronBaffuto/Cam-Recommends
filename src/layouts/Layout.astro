---
import "../styles/global.css";
const { title } = Astro.props;
---

<html lang="en" data-theme="garden">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title} | Cam Recommends</title>
    <meta name="description" content="Product reviews and recommendations by Cam." />
	<link rel="stylesheet" href="/styles/global.css" />
  </head>
  <body class="min-h-screen flex flex-col">
    <header class="navbar bg-base-100 shadow">
      <div class="container mx-auto px-4 flex justify-between items-center">
        <a href="/" class="text-xl font-bold">Cam Recommends</a>
      </div>
    </header>

    <main class="flex-grow container mx-auto px-4 py-6">
      <slot />
    </main>

    <footer class="bg-base-200 p-4 text-center text-sm">
      {new Date().getFullYear()} Cam Recommends - Trusted Reviews
    </footer>
  </body>
</html>
