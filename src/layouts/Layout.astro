---
import "../styles/global.css";
import Nav from "../components/Nav.astro";
import { theme } from "../config/theme.js";
const { title } = Astro.props;
---

<html lang="en" data-theme={theme}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title} | Cam Recommends</title>
    <meta name="description" content="Product reviews and recommendations by Cam." />
	<link rel="stylesheet" href="/styles/global.css" />
  </head>
  <body class="min-h-screen flex flex-col">
    <Nav />

    <main class="flex-grow container mx-auto px-4 py-6">
      <slot />
    </main>

    <footer class="bg-base-200 p-4 text-center text-sm">
      {new Date().getFullYear()} Cam Recommends - Trusted Reviews
    </footer>
  </body>
</html>
